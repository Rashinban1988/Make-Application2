<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
		    <h1>Editing Book</h1>
		    <div id="error_explanation">
          <% if @book.errors.any? %>
          <% if @book.errors.count < 2 %>
            <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
          <% end %>
            <ul>
              <% @book.errors.full_messages.each do |book| %>
                <li><%= book %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
	      <%= form_with model: @book do |book| %>
          <div class="form-group">
            <label for="book_title">Title</label>
              <%= book.text_field :title, :class => "form-control book_title" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= book.text_area :body, :class => "form-control book_body" %>
          </div>
          <div class="form-group">
            <%= book.submit 'Update Book', :class => "btn btn-success" %>
          </div>
        <% end %>
      </form>
      <%= link_to "Show", book_path(@book.id) %>
       |
      <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>